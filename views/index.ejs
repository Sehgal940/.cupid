<%-include('../ejs Material/header.ejs')%>
<div class="w-full h-screen flex items-center justify-center bg-center bg-cover bg-[url('https://images.unsplash.com/photo-1557683316-973673baf926?q=80&w=1429&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D')] bg-center px-10 py-10 ">
   <div class="xs:w-[50vw] xs:h-[50vh] sm:w-[50vw] sm:min-h-[70vh] md:w-[45vw] md:min-h-[70vh] lg:w-[35vw] lg:min-h-[70vh] xl:w-[30vw] xl:min-h-[70vh] bg-zinc-100 rounded-md  px-10 py-10">
    <form method="post" action="/">
    <h1 class="text-2xl text-center">&#128513;</h1>
    <%
     if(msg.length>0)
     {
        if (msg[0] !== 'Invalid Credentials' && msg[0]!== 'Invalid User') 
        {%>
            <div class="bg-green-100 border border-green-400 text-green-500 px-2 py-2 rounded-full text-center mb-2 mt-2" role="alert"><%= msg %></div>
        <%}
        else
        {%>
            <div class="bg-red-100 border border-red-400 text-red-700 px-2 py-2 rounded-full text-center mb-2 mt-2" role="alert"><%= msg %></div>
        <%}
     }
    %>
    
    <h1 style="font-family:Cambria;" class="tracking-tighter text-3xl font-semibold text-center text-zinc-600 capitalize"><em>Welcome to Cupid</em></h1>
    <input class="block border-2 mt-3 w-full h-10 px-7 py-4 outline-none rounded-full" type="text" placeholder="username" name="username"required=""/>
    <input class="block border-2 mt-3 w-full h-10 px-7 py-4 outline-none rounded-full" type="password" placeholder="password" name="password"required=""/>
    <a class="block font-semibold text-zinc-500 w-full mt-3 text-center" href="/forgetpass">forget Password</a>
    <input style="font-family:'Arial'"class="block mt-4 w-full h-10  bg-red-500 rounded-full cursor-pointer text-white" type="submit" value="login"/>
    <a class="block  font-semibold text-zinc-500 w-full mt-3 " href="/register">Don't have Account ? </a>
    <p class="text-xs mt-4 text-zinc-500 text-center">By continuing, you agree to Cupid's Terms of Service
        and acknowledge you've read our Privacy Policy.</p>
    </form>
 </div>
</div>
<%-include('../ejs Material/footer.ejs')%>