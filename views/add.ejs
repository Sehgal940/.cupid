<%-include('../ejs Material/header.ejs')%>
<div class="w-full h-screen  px-10 py-20 text-white ">
<h1 class="text-xl  ">Create post + </h1>
<hr class="opacity-10 mt-3">
<form action="/createpost" method="post" enctype="multipart/form-data">
    <input class=" block w-1/3 px-3 py-2" type="file" name="postimg"/>
    <input class=" text-zinc-700 outline-none block w-1/3 px-3 py-2 border-2 rounded-md mt-2 " type="text" placeholder="Title" name="title">
    <textarea class=" text-zinc-700 outline-none block w-1/3 px-3 py-2 border-2 rounded-md mt-2 h-40 " type="text" placeholder="Description" name="description"></textarea>
    <input class=" outline-none block w-1/3 px-3 py-2 border-2 bg-red-700 mt-2 rounded-md cursor-pointer" type="submit"  value="Post +">
</form>
</div>
